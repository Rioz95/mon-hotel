{% extends 'base.html.twig' %}

{% block title %}Our Rooms
{% endblock %}

{% block content %}
	<!-- Section Hero -->
	<section class="site-hero inner-page overlay" style="background-image: url('{{ asset('images/room.jpg') }}');" data-stellar-background-ratio="0.5">
		<div class="container">
			<div class="row site-hero-inner justify-content-center align-items-center">
				<div class="col-md-10 text-center" data-aos="fade">
					<h1 class="heading mb-3">Rooms</h1>
					<ul class="custom-breadcrumbs mb-4">
						<li>
							<a href="{{ path('home') }}">Home</a>
						</li>
						<li>&bullet;</li>
						<li>Rooms</li>
					</ul>
				</div>
			</div>
		</div>
		<a class="mouse smoothscroll" href="#next">
			<div class="mouse-icon">
				<span class="mouse-wheel"></span>
			</div>
		</a>
	</section>

	<!-- Section Rooms -->
	<section class="section">
		<div class="container">
			<div class="row">
				{% if roomsByCategory is empty %}
					<div class="col-md-12 text-center">
						<p>No rooms available.</p>
					</div>
				{% else %}
					{% for category, data in roomsByCategory %}
						<div class="col-md-12 mb-5">
							<h2 class="text-center text-danger" style="text-transform: capitalize;">
								{{ category }}
								Rooms
							</h2>
							<div class="row">
								{% for type, rooms in data.rooms %}
									{% for room in rooms %}
										<div class="col-md-4 mb-4" data-aos="fade-up">
											<a href="#" class="room">
												<figure class="img-wrap" style="overflow: hidden; position: relative; width: 100%; height: 200px;">
													<img src="{{ asset('images/room/' ~ room.image) }}" alt="Room image" style="width: 100%; height: 100%; object-fit: cover;">
												</figure>
												<div class="p-3 text-center room-info">
													<h2 class="text-center text-danger" style="text-transform: capitalize;">{{ room.type }}</h2>
													<span class="text-uppercase letter-spacing-1">{{ room.price }}$ / per night</span>
												</div>
											</a>
										</div>
									{% else %}
										<div class="col-md-12 text-center">
											<p>No rooms available for this type.</p>
										</div>
									{% endfor %}
								{% else %}
									<div class="col-md-12 text-center">
										<p>No rooms available in this category.</p>
									</div>
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</section>

	<!-- Section Great Offers -->
<!-- (Your existing great offers section) -->

	<!-- Section Reserve Now -->
	<!-- (Your existing reserve now section) -->
{% endblock %}
