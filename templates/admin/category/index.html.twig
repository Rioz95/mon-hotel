{% extends 'admin/base.html.twig' %}

{% block title %}Categorie management
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1 class="text-black text-center">CATEGORIES LIST</h1>
		<a href="{{path('admin_category_new')}}" class="btn btn-primary">
			<i class="fa-solid fa-plus"></i>Add Category
		</a>

		<table class="table">
			<thead>
				<tr>
					<th class="text-center" scope="col">Id</th>
					<th class="text-center" scope="col">Name</th>
					<th class="text-center" scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td class="text-center">{{category.id}}</td>
						<td class="text-center">{{category.name}}</td>
						<td class="text-center">
							<a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalSimple" data-titre="Suppression d'une catégorie" data-message="Ete vous sur de supprimer la catégories '{{category.name}}'" data-libelleboutton="Supprimer la catégorie" data-lien="{{path('admin_category_delete', {'id': category.id})}}">
								<i class="fas fa-trash"></i>
							</a>
							<a href="{{path('admin_category_edit', {'id': category.id})}}" class="btn btn-primary">
								<i class="fa-solid fa-pen"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}

{% block javascripts %}
	{% include "admin/include/_modal.html.twig" %}
{% endblock %}
